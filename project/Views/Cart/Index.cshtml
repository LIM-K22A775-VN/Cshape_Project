@model IEnumerable<project.ViewModels.CartItem>
@{
    ViewData["Title"] = "Gio hang";
}
<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">Cart</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Pages</a></li>
        <li class="breadcrumb-item active text-white">Cart</li>
    </ol>
</div>
<!-- Single Page Header End -->
<!-- Cart Page Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Products</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total</th>
                        <th scope="col">Handle</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <th scope="row">
                                <div class="d-flex align-items-center">
                                    <img src="~/Hinh/Hinh/HangHoa/@item.Hinh" class="img-fluid me-5 rounded-circle" style="width: 80px; height: 80px;" alt="@item.TenHh">
                                </div>
                            </th>
                            <td>
                                <p class="mb-0 mt-4">
                                    <a asp-action="Detail" asp-controller="HangHoa"
                                    asp-route-id ="@item.MaHh">
                                        @item.TenHh
                                    </a>                   
                                    </p>
                            </td>
                            <td>
                                <p class="mb-0 mt-4 item-price" data-price="@item.DonGia">@item.DonGia $</p>
                            </td>
                            <td>
                                <div class="input-group quantity mt-4" style="width: 100px;" data-mahh="@item.MaHh">
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-minus rounded-circle bg-light border" type="button">
                                            <i class="fa fa-minus"></i>
                                        </button>
                                    </div>
                                    <input type="text" class="form-control form-control-sm text-center border-0 quantity-input" value="@item.SoLuong" readonly>
                                    <div class="input-group-btn">
                                        <button class="btn btn-sm btn-plus rounded-circle bg-light border" type="button">
                                            <i class="fa fa-plus"></i>
                                        </button>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <p class="mb-0 mt-4 item-total">@item.ThanhTien.ToString("F2") $</p>
                            </td>
                            <td>
                                <a asp-action="RemoveCart" asp-controller="Cart" 
                                asp-route-id = "@item.MaHh"
                                class="btn btn-md rounded-circle bg-light border mt-4">
                                    <i class="fa fa-times text-danger"></i>
                                </a>
                            </td>

                        </tr>
                    }
                                
                </tbody>
            </table>
        </div>
        <div class="mt-5">
            <input type="text" class="border-0 border-bottom rounded me-5 py-3 mb-4" placeholder="Coupon Code">
            <button class="btn border-secondary rounded-pill px-4 py-3 text-primary" type="button">Apply Coupon</button>
        </div>
        <div class="row g-4 justify-content-end">
            <div class="col-8"></div>
            <div class="col-sm-8 col-md-7 col-lg-6 col-xl-4">
                <div class="bg-light rounded">
                    <div class="p-4">
                        <h1 class="display-6 mb-4">Cart <span class="fw-normal">Total</span></h1>
                        <div class="d-flex justify-content-between mb-4">
                            <h5 class="mb-0 me-4">Subtotal:</h5>
                            <p class="mb-0" id="cartSubtotal">$@Model.Sum(p=>p.ThanhTien).ToString("F2")</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h5 class="mb-0 me-4">Shipping</h5>
                            <div class="">
                                <p class="mb-0">Flat rate: $3.00</p>
                            </div>
                        </div>
                        <p class="mb-0 text-end">Shipping to Ukraine.</p>
                    </div>
                    <div class="py-4 mb-4 border-top border-bottom d-flex justify-content-between">
                        <h5 class="mb-0 ps-4 me-4">Total</h5>
                        <p class="mb-0 pe-4" id="cartTotal">$@((Model.Sum(p => p.ThanhTien) + 3).ToString("F2"))</p>
                    </div>
                    <a asp-action="ThanhToan" asp-controller="Cart"
                       class="btn border-secondary rounded-pill px-4 py-3 text-primary text-uppercase mb-4 ms-4">
                        Thanh toán
                    </a>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart Page End -->
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Khi bấm nút +
            document.querySelectorAll(".btn-plus").forEach(btn => {
                btn.addEventListener("click", function () {
                    const quantityDiv = this.closest(".quantity");
                    const input = quantityDiv.querySelector("input");
                    const maHh = quantityDiv.getAttribute("data-mahh");
                    let value = parseInt(input.value) || 0;
                    value = value + 1;
                    
                    updateQuantity(maHh, value);
                });
            });

            // Khi bấm nút -
            document.querySelectorAll(".btn-minus").forEach(btn => {
                btn.addEventListener("click", function () {
                    const quantityDiv = this.closest(".quantity");
                    const input = quantityDiv.querySelector("input");
                    const maHh = quantityDiv.getAttribute("data-mahh");
                    let value = parseInt(input.value) || 0;
                    if (value > 1) {
                        value = value - 1;
                        updateQuantity(maHh, value);
                    }
                });
            });

            // Hàm cập nhật số lượng và tổng tiền
            function updateQuantity(maHh, quantity) {
                fetch('/Cart/UpdateQuantity', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `id=${maHh}&quantity=${quantity}`
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        // Cập nhật UI
                        const row = document.querySelector(`[data-mahh="${maHh}"]`).closest("tr");
                        if (!row) return;
                        
                        // Lấy giá từ data attribute
                        const priceElement = row.querySelector(".item-price");
                        const price = parseFloat(priceElement.getAttribute("data-price")) || 0;
                        
                        // Cập nhật số lượng
                        const input = row.querySelector(".quantity-input");
                        if (input) {
                            input.value = quantity;
                        }
                        
                        // Cập nhật thành tiền của hàng
                        const totalCell = row.querySelector(".item-total");
                        if (totalCell) {
                            const itemTotal = (price * quantity).toFixed(2);
                            totalCell.innerText = itemTotal + " $";
                        }
                        
                        // Cập nhật Subtotal
                        const subtotal = parseFloat(data.subtotal) || 0;
                        const subtotalElement = document.getElementById("cartSubtotal");
                        if (subtotalElement) {
                            subtotalElement.innerText = "$" + subtotal.toFixed(2);
                        }
                        
                        // Cập nhật Total (Subtotal + Shipping $3.00)
                        const total = subtotal + 3.00;
                        const totalElement = document.getElementById("cartTotal");
                        if (totalElement) {
                            totalElement.innerText = "$" + total.toFixed(2);
                        }
                        
                        // Cập nhật số lượng trên icon giỏ hàng
                        updateCartIcon(data.totalQuantity);
                    } else {
                        alert('Không thể cập nhật số lượng');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Có lỗi xảy ra khi cập nhật số lượng: ' + error.message);
                });
            }

            // Hàm cập nhật icon giỏ hàng
            function updateCartIcon(quantity) {
                // Tìm cart icon - cart icon nằm trong view component
                // Selector: tìm span trong a có chứa fa-shopping-bag
                const shoppingBagIcon = document.querySelector('.fa-shopping-bag');
                if (shoppingBagIcon) {
                    const cartLink = shoppingBagIcon.closest('a');
                    if (cartLink) {
                        const cartBadge = cartLink.querySelector('span.position-absolute');
                        if (cartBadge) {
                            cartBadge.textContent = quantity;
                            // Nếu số lượng = 0, ẩn badge
                            if (quantity === 0) {
                                cartBadge.style.display = 'none';
                            } else {
                                cartBadge.style.display = 'flex';
                            }
                            return;
                        }
                    }
                }
                
                // Nếu không tìm thấy, reload lại trang để cập nhật view component
                // (ViewComponent được render server-side nên cần reload)
                setTimeout(() => {
                    location.reload();
                }, 300);
            }
        });
    </script>
}
