    @model IEnumerable<project.ViewModels.CartItem>

    <h2 class="mb-4 text-center text-primary">Trang thanh toán</h2>

<form asp-action="ThanhToan" method="post" class="container py-4 border rounded shadow-sm bg-light" style="padding-top: 500px;">
        <div class="table-responsive mb-4">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>Tên hàng hóa</th>
                        <th>Đơn giá</th>
                        <th>Số lượng</th>
                        <th>Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenHh</td>
                            <td>@item.DonGia.ToString("C")</td>
                            <td>@item.SoLuong</td>
                            <td>@item.ThanhTien.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="mb-4 text-end fs-5 fw-bold text-success">
            Tổng cộng: @Model.Sum(p => p.ThanhTien).ToString("C")
        </div>

        <h4 class="mb-3 text-secondary border-bottom pb-2">Thông tin người nhận</h4>
        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <label for="HoTen" class="form-label">Họ tên người nhận <span class="text-danger">*</span></label>
                <input type="text" id="HoTen" name="HoTen" class="form-control" placeholder="Nguyễn Văn A" required />
            </div>
            <div class="col-md-6">
                <label for="DienThoai" class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                <input type="tel" id="DienThoai" name="DienThoai" class="form-control" placeholder="0912345678" required />
            </div>
        </div>

        <div class="mb-4">
            <label for="DiaChi" class="form-label">Địa chỉ giao hàng <span class="text-danger">*</span></label>
            <input type="text" id="DiaChi" name="DiaChi" class="form-control" placeholder="Số nhà, đường, phường, quận, thành phố" required />
        </div>

        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <label for="Email" class="form-label">Email</label>
                <input type="email" id="Email" name="Email" class="form-control" placeholder="email@example.com" />
            </div>
            <div class="col-md-6">
                <label for="CachThanhToan" class="form-label">Cách thanh toán</label>
                <select id="CachThanhToan" name="CachThanhToan" class="form-select">
                    <option value="Tiền mặt" selected>Tiền mặt</option>
                    <option value="Chuyển khoản">Chuyển khoản</option>
                    <option value="Paypal">Paypal</option>
                    <option value="Thanh toán khi nhận hàng">Thanh toán khi nhận hàng</option>
                </select>
            </div>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg fw-semibold shadow-sm">
                Xác nhận thanh toán
            </button>
        </div>
    </form>
