@model project.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng ký thành viên</h1>
        
        @* Hiển thị lỗi chung *@
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        
        <form asp-action="DangKy" method="post">
            <div class="row">
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for="MaKh" class="form-label my-3"></label>
                        <input asp-for="MaKh" class="form-control" />
                        <span asp-validation-for="MaKh" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for="MatKhau" class="form-label my-3"></label>
                        <input asp-for="MatKhau" type="password" class="form-control" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-item w-100">
                        <label asp-for="HoTen" class="form-label my-3"></label>
                        <input asp-for="HoTen" class="form-control" />
                        <span asp-validation-for="HoTen" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-item w-100">
                        <div class="form-check my-3">
                            <input asp-for="GioiTinh" class="form-check-input" type="checkbox" />
                            <label class="form-check-label" asp-for="GioiTinh">Nam?</label>
                        </div>
                    </div>
                </div>

                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for="NgaySinh" class="form-label my-3"></label>
                        <input asp-for="NgaySinh" type="date" class="form-control" />
                        <span asp-validation-for="NgaySinh" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12 col-lg-6">
                    <div class="form-item w-100">
                        <label asp-for="DienThoai" class="form-label my-3"></label>
                        <input asp-for="DienThoai" class="form-control" />
                        <span asp-validation-for="DienThoai" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-item w-100">
                        <label asp-for="DiaChi" class="form-label my-3"></label>
                        <input asp-for="DiaChi" class="form-control" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-item w-100">
                        <label asp-for="Email" class="form-label my-3"></label>
                        <input asp-for="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                        <div class="col-12">
                            <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary">
                                Đăng ký
                            </button>
                        </div>
                        <div class="col-12">
                            <a asp-controller="KhachHang" asp-action="DangNhap" class="btn btn-link">
                                Đã có tài khoản? Đăng nhập
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
